            <p><?= '<b>Categoria: </b> &nbsp;' . $promo->ID_Categoria ?></p>
            <p><?= '<b>Data Inizio: </b> &nbsp;' . $promo->inizio ?></p>
            <p><?= '<b>Data Fine: </b> &nbsp;' . $promo->fine ?></p>
            
        </div>

        <?= $this->Ottieni($promo->ID_Promozione) ?>

    </div> 
    <!-- fine div della promozione-->
<?php endforeach; ?>


