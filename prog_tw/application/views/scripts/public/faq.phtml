$(function()
{
    $('div#desc').slideToggle();
    
    
        $('div#elemento').on('click', function(){
        
        if($(this).find('div#desc').is(':hidden')){
                $('div#desc').hide('slow');
                $(this).find('div#desc').slideToggle();
            }
            else{
                $(this).parent().find('div#desc').hide('slow');
            }           
    });

});

